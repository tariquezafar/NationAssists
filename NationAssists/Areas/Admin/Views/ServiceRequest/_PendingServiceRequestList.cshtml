@model NationAssists.Areas.Admin.Models.AllocateServiceRequest



@if (Model.PendingServiceRequestList != null)
{
    int i = 0;

    if (Model.PendingServiceRequestList.Count > 0)
    {
        <table>

            <thead>
                <tr>
                    <th>Operation</th>
                    <th>SNo.</th>
                    <th>Ticket No</th>
                    <th>Service Name</th>
                    <th>Type of Service</th>
                    <th>Customer Name</th>
                    <th>Contact No</th>
                    <th>Email Id</th>
                    <th>Service Location</th>
                    <th>Service Requested Date</th>
                    <th>Status</th>


                </tr>
            <thead>
            <tbody>
                @foreach (DataEngine.ServiceRequest item in Model.PendingServiceRequestList)
                {
                    i = i + 1;


                <tr>
                    <td>

                        <a data-id="@item.ServiceRequestId" onclick="ShowServiceRequestDetail(@Newtonsoft.Json.JsonConvert.SerializeObject( item))"><img src="~/images/edit.gif" title="Edit" alt="Edit" align="EDIT" /></a> &nbsp;

                    </td>
                    <td><span class="blueClr">@i</span></td>
                    <td>@item.TicketNo</td>
                    <td>@item.ServiceName</td>
                    <td>@item.SubCategoryName</td>
                    <td>@item.Customer_Name</td>
                    <td>@item.ContactMobileNo</td>
                    <td>@item.EmailId</td>
                    <td>@item.ServiceLocation</td>
                    <td>@item.ServiceRequestedDate.ToString("dd-MMM-yyyy hh mm ss")</td>
                    <td>@item.Status_Name</td>


                </tr>
                }
            </tbody>



        </table>
    }

}

else
{
    <blockquote>  <h3 style="color:salmon">No Record exist...!!!</h3></blockquote>
}


@*</div>*@




