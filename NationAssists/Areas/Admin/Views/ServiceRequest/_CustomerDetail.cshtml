@model DataEngine.Customer
<div id="dvServiceRequestDetail">
    <ul class="form flexBox">
        <li class="oneThird">
            <span class="fieldHd">Customer Name</span>
            <input type="text" disabled="disabled" value="@(Model.FirstName+ " "+ Convert.ToString(Model.LastName))" id="txtCustName" class="formInput" />
        </li>
        <li class="oneThird">
            <span class="fieldHd" id="lblService">Mobile No </span>
            <input type="text" disabled="disabled" value="@Model.MobileNo" class="formInput" />
        </li>
        <li class="oneThird RAP">
            <span class="fieldHd">Email ID </span>
            <input type="text" value="@Model.EmailId" id="txtCustEmail" class="formInput" disabled="disabled">
        </li>
        <li class="oneThird RAP">
            <span class="fieldHd">CPR Number</span>
            <input type="text" value="@Model.NationalId" class="formInput" disabled="disabled">
        </li>
     

    </ul>
    <div class="dbTable" id="tblProviderList">

        @if (Model.MembershipList != null)
        {
            int i = 0;

            if (Model.MembershipList.Count > 0)
            {
                <table>

                    <thead>
                        <tr>
                            <th>SNo.</th>
                            <th>Membership Reference Code</th>
                            <th>Package Name</th>
                            <th>Effective Date</th>
                            <th>Expiry Data</th>
                          
                            <th>Status</th>
                            

                        </tr>
                    <thead>
                    <tbody>
                        @foreach (DataEngine.Membership item in Model.MembershipList)
                        {
                            i = i + 1;


                        <tr>
                            <td><span class="blueClr">@i</span></td>
                            <td>@item.MembershipReferenceNo</td>
                            <td>@item.PackageName</td>
                            <td>@(Convert.ToDateTime( item.EffectiveDate).ToString("dd-MMM-yyyy"))</td>
                            <td>@(Convert.ToDateTime(item.ExpiryDate).ToString("dd-MMM-yyyy"))</td>

                            <td>@((DateTime.Now.Date >= Convert.ToDateTime( item.EffectiveDate).Date && DateTime.Now.Date<=Convert.ToDateTime(item.ExpiryDate).Date ) ? "Active" :"In Active" )</td>


                        </tr>
                        }
                    </tbody>



                </table>
            }

        }

        else
        {
            <blockquote>  <h3 style="color:salmon">No Record exist...!!!</h3></blockquote>
        }
    </div>
    <br />

   
</div>

