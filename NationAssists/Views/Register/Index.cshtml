
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="whtBg pt60 pb60"
     style="background: url(images/login_bg.jpg) no-repeat center top; background-size: cover;">
    <div class="container">
        <div class="regBox">
            <div class="flexBox spacebetween">
                <div class="mainHd">Register</div>
                <ul class="regTab flexBox">
                    <li class="ci active">Credential Info</li>
                    <li class="gi">General Info</li>
                    <li class="bi">Business Info</li>
                    <li class="mt">Member Type</li>
                    <li class="md" style="display:none">Member Detail</li>
                </ul>
            </div>
            <div id="dvCredentails">
                <ul class="form flexBox">
                    <li>
                        <span class="fieldHd">Email ID </span>
                        <input type="text" id="txtEmailId" class="formInput">
                    </li>
                    <li>
                        <span class="fieldHd">Password </span>
                        <input type="password" id="txtPassword" class="formInput" maxlength="20">
                    </li>
                    <li>
                        <span class="fieldHd">Confirm Password </span>
                        <input type="password" id="txtConfirmPassword" class="formInput">
                    </li>
                </ul>
                <div class="tac"><button class="formBtn regNextStep">Next</button></div>

            </div>
            <div id="generalInfo" style="display:none;">
                <ul class="form flexBox">
                    <li>
                        <span class="fieldHd">First Name</span>
                        <input type="text" id="txtFirstName" class="formInput">
                    </li>
                    <li>
                        <span class="fieldHd">Last Name</span>
                        <input type="text" id="txtLastName" class="formInput">
                    </li>
                    <li>
                        <span class="fieldHd">Gender</span>
                        <select id="ddlGender" class="formSelect">
                            <option value="0">Select</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                    </li>
                    <li>
                        <span class="fieldHd">C.R. Number</span>
                        <input type="text" id="txtNationalId" class="formInput">
                    </li>
                    <li>
                        <span class="fieldHd">Mobile Number</span>

 <input type="text" id="txtMobileNo" class="formInput" onclick="RestrictAlphabetAndSpace('txtMobileNo')"/>

                    </li>

                </ul>
                <div class="tac"><a href="#" class="skipLink bkci">Previous</a><button class="formBtn biNextStep">Next</button></div>
            </div>
            <div id="businessInfo" style="display: none;">
                <ul class="form flexBox">
                    <li>
                        <span class="fieldHd">Account Type</span>
                        <select id="ddlAccountType" class="formSelect">
                            <option value="0">Select</option>
                            <option value="NA">NA Member Account</option>
                            <option value="GA">Guest Account</option>
                        </select>
                    </li>
                  


                </ul>
                <div class="tac"><a href="#" class="skipLink bkgi">Previous</a> <button class="formBtn mtNextStep">Next</button></div>
            </div>
            <div id="dvMemberType" style="display: none;">
                <ul class="form flexBox">

                    <li>
                        <span class="fieldHd">Service Provider</span>
                        <select class="formSelect">
                            <option>Select</option>
                            <option value="SP">Nation Assist (Direct/Guest)</option>
                            <option value="IC">Insurance Company</option>
                            <option value="IB">Insurance Brokers</option>
                            <option value="BA">Banks</option>
                            <option value="AG">Agents</option>
                            <option value="OS">Others</option>
                        </select>
                    </li>


                </ul>
                <div class="tac"><a href="#" class="skipLink bkbi">Previous</a> <button class="formBtn mdNextStep">Next</button></div>
            </div>

            <div id="dvNAMemberDetail" style="display: none;">
                <ul class="form flexBox">

                    <li>
                        <span class="fieldHd">Service Provider</span>
                        <select class="formSelect">
                            <option>Select</option>

                        </select>
                    </li>
                    <li>
                        <span class="fieldHd">Policy No</span>
                        <input type="text" class="formInput">
                    </li>
                    <li>
                        <span class="fieldHd">Chassis Number</span>


                        <input type="text" class="formInput">

                    </li>
                    <li>
                        <span class="fieldHd">Registration Number</span>


                        <input type="text" class="formInput">

                    </li>


                </ul>
                <div class="tac"><a href="#" class="skipLink bkmt">Previous</a> <button class="formBtn">Finish</button></div>
            </div>

            <div class="assBey">...assistance and beyond</div>
        </div>
    </div>
</div>

<script type="text/javascript" src="~/js/Register.js" > </script> 

    
